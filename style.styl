@import 'vendor'
* 
    box-sizing: border-box



body
    background: #fff
    font-family: "PT Sans", sans-serif
    padding: 30px

.construct
    transition: all .5s linear
    width: 800px
    margin: 0 auto
    overflow: hidden


    .ear
        display: inline-block
        overflow: hidden
        position: relative
        width: 280px
        height: 400px

        &.invisible
            position: absolute;
            top:0 
            left: 0


        control-result(v)
            position: absolute
            z-index: v

            &.first
                z-index: v+1
            &.second
                z-index: v+2

        .color
            control-result(1)

        .chanel-color
            control-result(4)

        .plate
            control-result(7)

        img
            //transition: opacity .3s linear
            opacity: 0
            position: absolute
            top: 0
            left: 0

            &.current
                opacity: 1

        
            &.first
                opacity: 1
                transition: none

    .ear.right
        float: right

    .ear.left
        transform: scaleX(-1)
        -webkit-transform: scaleX(-1)
        float: left

    .ears
        width: 100%
        overflow: hidden
        margin-top: 20px

    .controller
        text-align: center
        margin: 20px 0

    h1
        margin: 0
        padding: 0
        text-align: center

    .switcher
        display: inline-block
        border-radius: 3px
        overflow: hidden
        border: 1px solid #2C775D

        span
            line-height: 30px
            display: inline-block
            padding: 3px 10px
            float: left
            box-sizing: border-box
            color: #fff
            cursor: pointer
            background: #3FC294

            &:first-child
                border-right: 1px solid #2C775D

            &:hover
                background: #97E7CB

            &.active
                pointer-events: none
                cursor: default
                background: #2C775D

    &[data-id="different"]
        width: 800px

        .control
            .control-variations.left
                display: table-cell
                transform: scaleX(-1)
                -webkit-transform: scaleX(-1)
                float: right

            .control-title
                text-align: center

    .control
        display: table
        margin-bottom: 15px
        width: 100%

        .control-title 
            vertical-align: top
            display: table-cell
            width: 200px
            padding-top: 5px

        .control-variations 
            display: table-cell
            float: left

            &.left
                display: none

            .control-variations-list
                height: 40px

                span
                    float: left
                    display: inline-block
                    position: relative
                    width: 30px
                    height: 30px
                    line-height: 30px
                    text-align: center
                    cursor: pointer

                    &::before
                        position: absolute
                        content: ''
                        display: inline-block
                        top: 0
                        left: 0
                        width: 30px
                        height: 30px
                        z-index: 2
                        box-sizing: border-box
                        transition: all .2s linear

                    &:hover::before
                        display: inline-block
                        width: 40px
                        height: 40px
                        border: 1px solid #00a36a
                        z-index: 3
                        top: -6px
                        left: -6px

                    &.active
                        &::before
                            display: inline-block
                            border: 4px solid #4BE7B0
                            z-index: 1
                            
                        &:hover::before
                            z-index: 3
                            top: -10px
                            left: -10px


                        
        &.color
            for clr, i in "transparent" "492b13" "24381d" "92918c" "6ecddf" "252525" "054670" "b80000" "cec9c3" "cba469" "fbe34b" "cec9c3" "cba469" "fbe34b"
                .c{i}
                    &::before
                        background: \#+clr

        &.chanel-color
            for clr, i in "transparent" "81B6DA" "FF7A61" "4CCE94" "BECE4C" "81B6DA" "FF7A61" "4CCE94" "BECE4C"
                .c{i}
                    &::before
                        background: \#+clr

        &.plate
            for clr, i in "empty.png" "pl_blaze.png" "pl_efl.png" "pl_red.png" "pl_jade.png" "pl_blaze.png" "pl_efl.png" "pl_red.png" "pl_jade.png"
                .c{i}
                    &::before
                        background: url(img/+clr)  no-repeat -30px -26px
                        background-size: 80px

        .c0::before
            background: none

        &.cable
            display: none;
            .control-variations.left
                visibility: hidden
